<div class="container">
  <div class="section">

    <div class="row white-text">
      <div class="col s12 m6 center">
        <br>
        <h3>Threat assessment!</h3>
        <p>Select the city closest to your home</p>
      </div>
      <div class="col s12 m1 center">
        <br><br>
        <h3><i class="mdi-content-send amber-text"></i></h3>
      </div>
      <div class="col s12 m5">
        <div class="input-field">
        <br>
          <form method="GET" action="threats">
            <select name="city">

              <option value="" disabled selected>Choose your City!</option>
              <% for(var i=0; i<cities.length; ++i){ %>
                <option class="city-name" value="<%= cities[i].get().name %>" >
                  <%= cities[i].get().name %>
                </option>
              <% } %>

            </select>
            <button id="threat-list" type="submit" class="waves-effect waves-light btn-flat amber white-text">Threat Down</button>
          </form>
        </div>
      </div>

      </div>
    </div>

  </div>
</div>


