<div class="container">
<% for(var i=0; i<1; ++i){ //cities.length %>
	<% var city_i = cities[0].get(); %>
	<div class="row">
		<div class="col s12 m12 offset-m">
  		<div class="card grey darken-4 white-text center">
  			<h1>Threats for the city of <%= city_i.name %></h1>
  		</div>
  	</div>
  </div>
	<div class="row">
		<div class="col s12 m12 offset-m">
			  <ul class="collapsible popout" data-collapsible="accordion">
			    <li class="grey darken-4 white-text">
			      <div class="collapsible-header grey darken-4 white-text"><i class="material-icons">filter_drama</i>Flood risk: <%= city_i.floodThreatLevel %></div>
			      <div class="collapsible-body grey darken-4 white-text"><p><%= city_i.floodInfo %></p></div>
			    </li>
			    <li>
			      <div class="collapsible-header grey darken-4 white-text"><i class="material-icons">trending_up</i>Earthquake risk: <%= city_i.earthquakeThreatLevel %></div>
			      <div class="collapsible-body grey darken-4 white-text"><p><%= city_i.earthquakeInfo %></p></div>
			    </li>
			    <li>
			      <div class="collapsible-header grey darken-4 white-text"><i class="material-icons">whatshot</i>Marauders risk: <%= city_i.marauderThreatLevel %></div>
			      <div class="collapsible-body grey darken-4 white-text"><p><%= city_i.marauderInfo %></p></div>
			    </li>
			  </ul>
		</div>
	</div>
	<div class="row">
		<div class="col s12 m6 offset-m3">
		  <div class="card grey darken-4">
  			<div class="card-content white-text">
					<h6>Sign up to connect with fellow <%= cities[0].get().name; %> Preppers and get the informaton you need to prepare accordingly.</h6>
				</div>
				<div class="card-action">
					<form action="signup" method="get" class="center">
						<input type="hidden" name="city" value="<%= cities[0].get().name; %>" />
						<button type="submit" value="Save." class="waves-effect waves-light btn amber"/>Sign Up</button>
					</form>
				</div>
			</div>
		</div>
	</div>
<% } %>




